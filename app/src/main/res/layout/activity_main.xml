<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rainbow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/redbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:tag="#FF0000" />

            <View
                android:id="@+id/orangebtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF8000"
                android:tag="#FF8000" />

            <View
                android:id="@+id/yellowbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFF00"
                android:tag="#FFFF00" />

            <View
                android:id="@+id/greenbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FF00"
                android:tag="#00FF00" />

            <View
                android:id="@+id/cyanbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFF"
                android:tag="#00FFFF" />

            <View
                android:id="@+id/blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000FF"
                android:tag="#0000FF" />

            <View
                android:id="@+id/purplebtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8000FF"
                android:tag="#8000FF" />

            <View
                android:id="@+id/fuchsiabtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF00FF"
                android:tag="#FF00FF" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="-100"
            android:padding="12dp" />

        <SeekBar
            android:id="@+id/saturationSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:max="100"
            android:min="-100"
            android:padding="12dp" />

        <SeekBar
            android:id="@+id/luminanceSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:max="100"
            android:min="-100"
            android:padding="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/result"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY" />


    <Button
        android:id="@+id/removeFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Remove filter" />

    <Button
        android:id="@+id/addFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="100dp"
        android:text="Add filter" />

    <Button
        android:id="@+id/changeBitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:text="Change Bitmap" />

</FrameLayout>
